@model IEnumerable<shopxe_2.Models.sanpham>
@{
    ViewBag.Title = "Cửa hàng thảo my, Danh sách xe cho thuê mới nhất, dịch vụ du lịch đà lạt ";
    ViewBag.keywords = "Danh sách xe cho thuê mới nhất";
    ViewBag.description = "Cửa hàng thảo my, danh sách xe mới nhất đang cho thuê,";
    Layout = "~/Views/layout/layout.cshtml";
    int? sao = 0;
    int dem = 0;
    shopxe_2.Models.Database db = new shopxe_2.Models.Database();
}
@section css{
    <link rel="stylesheet" href="~/accect/css/StyleSheet1.css">
    <link rel="stylesheet" href="~/accect/css/cssreset.css" />
    <link rel="stylesheet" href="~/accect/css/cardsanpham.css" />
    
}
<div class="card">
    @foreach (var i in Model)
    {
        <div class="card__item">
            <div class="img">
                <img src="@i.imgurl_1" alt="">
            </div>
            <div class="name">
                <p>@i.ten</p>
                <a href="~/Chitiet/?id=@i.id"></a>
            </div>
            <div class="gia">
                <p>@i.gia</p>
            </div>
            <div class="danhgia">
                <p>@i.danhgia/10&#10025;</p>
            </div>
        </div>
    }
    
</div>
<div style="position:relative ;margin-bottom:100px;max-width:1040px;margin-top:70px;left:50%;transform:translateX(-50%);">
    <div style="display:flex;flex-wrap:wrap;">
        @for (int i = 1; i <= (db.sanphams.Count() / 9) + 1; i++)
        {
            <div><a style="padding:5px 10px;background-color:black;color:white;font-size:20px;" href="~/Danhsachxe/Danhsachxemoinhat?page=@i" class="btn-dark">@i</a></div>
        }
    </div>
</div>

@section js{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
}
